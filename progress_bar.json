palette {
	text: "Please wait...",
	preferredSize: [350, 60],
	orientation: "column",
	alignChildren: "fill",
	bar: Progressbar {},
	lblMessage: StaticText {
		alignment: "left",
		text: ""
	},
	warning: Panel {
		orientation: "column",
		alignChildren: "fill",
		message: StaticText {
			text: "Don't make changes to the current document while the script is running!",
			properties: {
				multiline: true
			}
		}
	}
}